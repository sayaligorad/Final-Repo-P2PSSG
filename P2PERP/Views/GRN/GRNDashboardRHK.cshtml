        let tableEndDate = null;

        // === Global Highcharts Theme ===
        Highcharts.setOptions({
            chart: {
                style: {
                    fontFamily: 'Poppins, sans-serif'
                }
            },
            colors: ['#6EC6FF', '#FFD54F', '#A5D6A7', '#F48FB1', '#90CAF9', '#CE93D8'],

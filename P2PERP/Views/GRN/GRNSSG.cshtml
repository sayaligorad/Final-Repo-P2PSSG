@{
    ViewBag.Title = "GRNSSG";
}
<div class="container mt-5">
    <div class="card">

        <!-- Headings -->
        <h4 id="headingApprovedPO" class="text-primary text-center fw-bolder">Approved PO List</h4>
        <h4 id="headingGRN" class="text-primary text-center fw-bolder" style="display:none;">GRN LIST</h4>

        <!-- Small Tabs -->
        <ul class="nav nav-pills ps-4" id="stockTabs" role="tablist">
            <li class="nav-item">
                <button class="nav-link active small-tab" data-bs-toggle="tab" data-bs-target="#current" type="button">
                    Approved PO
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link small-tab" data-bs-toggle="tab" data-bs-target="#grnlist" type="button">
                    GRN List
                </button>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content mt-0">
            <div class="tab-pane fade show active" id="current">
                @Html.Partial("_ApprovedPOListSSG")
            </div>
            <div class="tab-pane fade" id="grnlist">
                @Html.Partial("_GRNListSSG")
            </div>
        </div>
    </div>
</div>
<style>
    .nav-pills ~ .tab-content {
        border: none !important;
        box-shadow: none !important;
        background: transparent !important;
    }

    .content-wrapper {
        justify-content: start !important;
    }
</style>

<script>
    $(document).ready(function () {

        // When any tab is shown
        $('button[data-bs-toggle="tab"]').on('shown.bs.tab', function (e) {
            var target = $(e.target).data('bs-target'); // Get which tab was activated

            if (target === '#current') {
                $("#headingApprovedPO").show();
                $("#headingGRN").hide();
            }
            else if (target === '#grnlist') {
                $("#headingApprovedPO").hide();
                $("#headingGRN").show();
            }
        });

    });
</script>

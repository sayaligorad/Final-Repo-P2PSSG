@model P2PLibray.Inventory.IssueItemViewModelDRB
@{
    ViewBag.Title = "Issue In-House";
}


<style>
    .form-control, .form-select {
        border-radius: 0.5rem;
        border: 1px solid #ced4da;
        transition: all 0.3s ease;
    }

        .form-control:focus, .form-select:focus {
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
            border-color: #86b7fe;
        }

    .btn {
        border-radius: 0.5rem;
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    .card {
        border: none;
    }

    .table th {
        border-top: none;
        font-weight: 600;
    }

    .table-responsive {
        border-radius: 0.5rem;
        overflow: hidden;
    }

    /*  Compact Table Row Size */
    .table td, .table th {
        padding: 0.35rem 0.5rem !important;
        font-size: 0.78rem;
        vertical-align: middle;
    }

    .btn-delete {
        padding: 2px 6px !important;
        font-size: 0.70rem !important;
    }

        .btn-delete i {
            font-size: 0.75rem !important;
        }

    td, th {
        text-align: center !important;
    }


    @@media (max-width: 768px) {
        .form-control, .form-select, .btn, .table td, .table th {
            font-size: 0.85rem;
        }
    }
</style>


<div class="container mt-4">
    <!-- Header -->
    <div class="card-header bg-primary text-white d-flex justify-content-center align-items-center rounded-top p-1">
        <h3 class="modal-title fw-bold text-white mb-0 fs-5">Transfer In-House</h3>
    </div>


    <!-- Main Card -->
    <div class="card shadow-lg border-0 rounded">
        <div class="card-body p-4">
            <form id="issueItemForm">
                <!-- First Row - Three Columns -->
                <div class="row g-3 mb-4">
                    <div class="col-md-4">
                        <label class="form-label form-label-sm fw-bold text-dark">Issue Code</label>
                        <input type="text" id="IssueCode" class="form-control form-control-sm bg-light text-dark shadow-sm" readonly />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label form-label-sm fw-bold text-dark">Issue Date</label>
                        <input type="date" id="IssueDate" class="form-control form-control-sm bg-light text-dark shadow-sm" value="@DateTime.Now.ToString("yyyy-MM-dd")" readonly />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label form-label-sm fw-bold text-dark">Department<span class="text-danger">*</span></label>
                        <select class="form-select form-select-sm dept-select shadow-sm" id="Department">
                            <option value="">Select Department</option>
                        </select>
                        <div id="deptError" class="text-danger mt-1 small" style="display:none;"></div>
                    </div>

                </div>

                <!-- Second Row - Three Columns -->
                <div class="row g-3 mb-4">
                    <div class="col-md-4">
                        <label class="form-label form-label-sm fw-bold text-dark">Employee Name<span class="text-danger">*</span></label>
                        <select class="form-select form-select-sm emp-select shadow-sm" id="Employee">
                            <option value="">Select Employee</option>
                        </select>
                        <div id="empError" class="text-danger mt-1 small" style="display:none;"></div>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label form-label-sm fw-bold text-dark">Item Name<span class="text-danger">*</span></label>
                        <select class="form-select form-select-sm item-select shadow-sm" id="ItemName">
                            <option selected value="">Select Item</option>
                        </select>
                        <!-- 🔹 Error message for Item -->
                        <small id="ItemNameError" class="text-danger d-none">Please select an item.</small>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label form-label-sm fw-bold text-dark">Bin Name<span class="text-danger">*</span></label>
                        <select class="form-select form-select-sm item-bin shadow-sm" id="BinName">
                            <option selected value="">Select Bin</option>
                        </select>
                        <!-- 🔹 Error message for Bin -->
                        <small id="BinNameError" class="text-danger d-none">Please select a bin.</small>
                    </div>
                </div>

                <!-- Third Row - Three Columns -->
                <div class="row g-3 mb-4">
                    <div class="col-md-4">
                        <label class="form-label form-label-sm fw-bold text-dark">Item Code</label>
                        <input type="text" id="ItemCode" class="form-control form-control-sm bg-light text-dark shadow-sm" readonly />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label form-label-sm fw-bold text-dark">Category</label>
                        <input type="text" id="ItemCategory" class="form-control form-control-sm bg-light text-dark shadow-sm" readonly />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label form-label-sm fw-bold text-dark">UOM</label>
                        <input type="text" id="UOM" class="form-control form-control-sm bg-light text-dark shadow-sm" readonly />
                    </div>
                </div>

                <!-- Fourth Row - Two Columns + Button -->
                <div class="row g-3 mb-4">
                    <div class="col-md-4">
                        <label class="form-label fw-bold text-dark">Quantity</label>
                        <input type="number"
                               id="Quantity"
                               class="form-control form-control-sm  text-dark shadow-sm"
                               min="1"
                               placeholder="Enter quantity" />
                        <small id="QuantityError" class="text-danger d-none">Quantity must be greater than 0.</small>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label fw-bold text-dark">Unit Price</label>
                        <input type="number" id="PricePerUnit" class="form-control form-control-sm bg-light text-dark shadow-sm" readonly />
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="button" id="btnAddItem" class="btn btn-success btn-sm w-4x0 shadow-sm">
                            <i class="bi bi-plus-circle me-2"></i> Add Item
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <!-- Items Table -->
        <div class="container-fluid px-4 mt-4">
            <div class="table-responsive rounded shadow-sm">
                <table id="issuedItemsTable" class="table table-striped table-hover align-middle mb-0">
                    <thead class="table-dark text-dark">
                        <tr>
                            <th>Sr No</th>
                            <th>Item Code</th>
                            <th>Item Name</th>
                            <th>Category</th>
                            <th>UOM</th>
                            <th>Qty</th>
                            <th>Unit Price</th>
                            <th>Amount</th>
                            <th>Bin Name</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody id="issuedItemsBody">
                       
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Total Amount Display -->
        <div class="container-fluid px-4 mt-4">
            <div class="row justify-content-end">
                <div class="col-md-4">

                    <div class="d-flex justify-content-around align-items-center p-1 bg-light rounded shadow-sm mb-5 ">
                        <label class="fw-bold text-dark mb-0 fs-6">Total Amount:</label>
                        <input type="text" id="TotalAmount" class="form-control form-control-sm text-center fw-semibold fs-6 bg-success text-white border-0" style="width: 120px;" value="0.00" readonly />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Submit Button -->
    <div class="container-fluid px-4 mt-4 mb-4">
        <div class="d-flex justify-content-center">
            <button type="button" id="btnSubmitIssuedItems" class="btn btn-warning btn-sm px-5 shadow-sm">
                <i class="bi bi-check2-circle me-2"></i> Issue Item
            </button>
        </div>
    </div>

</div>




<script>
    $(document).ready(function () {

        // 🔹 Load Departments
        $.getJSON("/Inventory/GetDepartmentsDRB", function (response) {
            let $ddl = $("#Department");
            $ddl.empty().append('<option value="">Select Department</option>');
            $.each(response, function (i, dept) {
                $ddl.append($("<option>").val(dept.DeptID).text(dept.DepartmentName));
            });
        });

        // 🔹 Load Employees when Department changes
        $("#Department").change(function () {
            let deptId = $(this).val();
            let $empSelect = $("#Employee");

            $empSelect.empty().append('<option value="">Select Employee</option>');

            if (deptId) {
                $.ajax({
                    type: "GET",
                    url: "/Inventory/EmployeesByDepartmentDRB",
                    data: { Did: deptId },
                    dataType: "json",
                    success: function (response) {
                        $.each(response, function (i, emp) {
                            $empSelect.append($("<option>").val(emp.StaffCode).text(emp.EmployeeName));
                        });
                    }
                });
            }
        });

        // 🔹 Load Items
        $.getJSON("/Inventory/GetInStockItemsDRB", function (response) {
            let $ddl = $("#ItemName");
            $ddl.empty().append('<option value="">Select Item</option>');
            let uniqueItems = new Set();
            $.each(response, function (i, item) {
                if (!uniqueItems.has(item.ItemCode)) {
                    uniqueItems.add(item.ItemCode);
                    $ddl.append(
                        $("<option>")
                            .val(item.ItemCode)
                            .text(item.ItemName)
                            .data("details", item)
                    );
                }
            });
        });

        // 🔹 Load Issue Code
        $.getJSON("/Inventory/getIssueCodeDRB", function (response) {
            $("#IssueCode").val(response[0].IssueCode);
        });

        // 🔹 When item selected → autofill details
        $("#ItemName").change(function () {
            let selected = $(this).find("option:selected").data("details");
            if (selected) {
                $("#ItemCode").val(selected.ItemCode);
                $("#ItemCategory").val(selected.ItemCategoryName);
                $("#UOM").val(selected.UOMName);
                $("#PricePerUnit").val(selected.UnitPrice);
            } else {
                $("#ItemCode, #ItemCategory, #UOM, #PricePerUnit").val("");
            }

            // Load Bins for this item
            loadBinsForItem(selected?.ItemCode);
        });

        // === Load Bins based on selected item ===
        let binStockMap = {};

        function loadBinsForItem(itemCode) {
            let $binSelect = $("#BinName");
            $binSelect.empty().append('<option value="">Select Bin</option>');
            if (!itemCode) return;

            $.ajax({
                type: "GET",
                url: "/Inventory/GetBinBasedOnItemDRB",
                data: { itemcode: itemCode },
                dataType: "json",
                success: function (response) {
                    $.each(response, function (i, bin) {
                        let available = binStockMap[bin.BinCode] ?? bin.CurrentItems;
                        binStockMap[bin.BinCode] = available;

                        if (available > 0) {
                            $binSelect.append(
                                $("<option>")
                                    .val(bin.BinCode)
                                    .text(`${bin.BinName} (Available: ${available})`)
                                    .data("binname", bin.BinName)
                                    .data("currentitems", available)
                            );
                        }
                    });
                }
            });
        }

        // === Quantity Validation (Live) ===
        $(document).on("input", "#Quantity", function () {
            let entered = parseInt($(this).val()) || 0;
            let maxQty = $("#BinName option:selected").data("currentitems") || 0;

            if (entered <= 0) {
                $("#QuantityError").removeClass("d-none").text("Quantity must be greater than 0!");
                $(this).addClass("is-invalid");
            } else if (entered > maxQty) {
                Swal.fire("Warning", "Quantity cannot exceed available stock in bin!", "warning");
                $(this).val(maxQty);
            } else {
                $("#QuantityError").addClass("d-none");
                $(this).removeClass("is-invalid");
            }
        });

        // === Add Item to Table ===
        $("#btnAddItem").on("click", function () {
            let srno = $("#issuedItemsTable tbody tr").length + 1;
            let itemCode = $("#ItemCode").val();
            let itemName = $("#ItemName option:selected").text();
            let cat = $("#ItemCategory").val();
            let uom = $("#UOM").val();
            let qty = parseInt($("#Quantity").val());
            let price = parseFloat($("#PricePerUnit").val()) || 0;
            let amount = (qty * price).toFixed(2);

            let $bin = $("#BinName option:selected");
            let binCode = $bin.val();
            let binName = $bin.data("binname");
            let currentItems = $bin.data("currentitems") || 0;

            // === Validations ===
            if (!itemCode) return Swal.fire("Warning", "Please select an item.", "warning");
            if (!binCode) return Swal.fire("Warning", "Please select a bin.", "warning");
            if (isNaN(qty) || qty <= 0) return Swal.fire("Warning", "Enter valid quantity.", "warning");
            if (qty > currentItems) return Swal.fire("Warning", "Quantity exceeds available stock.", "warning");

            // === Add Row ===
            $("#issuedItemsTable tbody").append(`
            <tr data-bincode="${binCode}">
                <td>${srno}</td>
                <td>${itemCode}</td>
                <td>${itemName}</td>
                <td>${cat}</td>
                <td>${uom}</td>
                <td>${qty}</td>
                <td>${price}</td>
                <td>₹${amount}</td>
                <td>${binName}</td>
                <td class="text-center">
                    <button type="button" class="btn btn-danger btn-delete btn-sm"><i class="bi bi-trash"></i></button>
                </td>
            </tr>
        `);

            // === Deduct stock from Bin ===
            let newQty = currentItems - qty;
            binStockMap[binCode] = newQty;
            if (newQty > 0) {
                $("#BinName option[value='" + binCode + "']")
                    .data("currentitems", newQty)
                    .text(`${binName} (Available: ${newQty})`);
            } else {
                $("#BinName option[value='" + binCode + "']").remove();
            }

            updateTotal();

            // === Reset Form ===
            $("#ItemName").val("").trigger("change");
            $("#ItemCode, #ItemCategory, #UOM, #Quantity, #PricePerUnit").val("");
        });

        // === Delete Item (with Stock Restore) ===
        $(document).on("click", ".btn-delete", function () {
            let $row = $(this).closest("tr");
            let binCode = $row.data("bincode");
            let qty = parseInt($row.find("td:eq(5)").text());
            let binName = $row.find("td:eq(8)").text();

            Swal.fire({
                title: "Are you sure?",
                text: "This item will be removed and stock restored.",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Yes, delete it",
                cancelButtonText: "Cancel"
            }).then((res) => {
                if (res.isConfirmed) {
                    $row.remove();
                    updateTotal();

                    // === Restore stock to Bin ===
                    let restoredQty = (binStockMap[binCode] || 0) + qty;
                    binStockMap[binCode] = restoredQty;

                    // If bin exists, update; otherwise, re-add
                    if ($("#BinName option[value='" + binCode + "']").length > 0) {
                        $("#BinName option[value='" + binCode + "']")
                            .data("currentitems", restoredQty)
                            .text(`${binName} (Available: ${restoredQty})`);
                    } else {
                        $("#BinName").append(
                            $("<option>")
                                .val(binCode)
                                .data("binname", binName)
                                .data("currentitems", restoredQty)
                                .text(`${binName} (Available: ${restoredQty})`)
                        );
                    }

                    // Reorder serial numbers
                    $("#issuedItemsTable tbody tr").each(function (i) {
                        $(this).find("td:first").text(i + 1);
                    });
                }
            });
        });

        // === Update Total Amount ===
        function updateTotal() {
            let total = 0;
            $("#issuedItemsTable tbody tr").each(function () {
                let amtText = $(this).find("td:eq(7)").text().replace(/[^\d.-]/g, "");
                total += parseFloat(amtText) || 0;
            });
            $("#TotalAmount").val("₹ " + total.toFixed(2));
        }

        // === Submit Issued Items ===
        $("#btnSubmitIssuedItems").click(function (e) {
            e.preventDefault();

            let header = {
                IssueCode: $("#IssueCode").val(),
                IssueDate: $("#IssueDate").val(),
                StaffCode: $("#Employee").val(),
                Department: $("#Department").val()
            };

            let items = [];
            $("#issuedItemsTable tbody tr").each(function () {
                let row = $(this).find("td");
                items.push({
                    IssueCode: header.IssueCode,
                    BinCode: $(this).data("bincode"),
                    ItemCode: $(row[1]).text(),
                    Quantity: $(row[5]).text(),
                    UnitPrice: $(row[6]).text(),
                    Amount: $(row[7]).text()
                });
            });

            if (!header.Department) return Swal.fire("Warning", "Select department.", "warning");
            if (!header.StaffCode) return Swal.fire("Warning", "Select employee.", "warning");
            if (items.length === 0) return Swal.fire("Warning", "No items added!", "warning");

            // === Save Header then Details ===
            $.ajax({
                url: "/Inventory/SaveIssueHeaderDRB",
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify(header),
                success: function () {
                    $.ajax({
                        url: "/Inventory/SaveIssueDetailsDRB",
                        type: "POST",
                        contentType: "application/json",
                        data: JSON.stringify(items),
                        success: function () {
                            Swal.fire({
                                icon: "success",
                                title: "Items Issued Successfully!",
                                timer: 2000,
                                showConfirmButton: false
                            }).then(() => location.reload());
                        }
                    });
                }
            });
        });

        // Run on initial load
        toggleNoDataMessage();

        // After adding item
        $("#btnAddItem").on("click", function () {
            setTimeout(() => toggleNoDataMessage(), 100);
        });

        // After deleting item(s)
        $(document).on("click", ".btn-delete", function () {
            setTimeout(() => toggleNoDataMessage(), 100);
        });

        // Also check again after save/reset
        $(document).on("click", "#btnSubmitIssuedItems", function () {
            setTimeout(() => toggleNoDataMessage(), 500);
        });

    });



    // === Function to show/hide "No data available" message (non-row version) ===
    function toggleNoDataMessage() {
        const $tableBody = $("#issuedItemsTable tbody");
        const $message = $("#noDataMessage");

        // Create message element once if not present
        if ($message.length === 0) {
            $("#issuedItemsTable").after(`
            <div id="noDataMessage"
                 class="text-center text-muted fw-semibold mt-2"
                 style="display:none;">
                No data available
            </div>
        `);
        }

        // Count only data rows (ignore placeholders)
        const hasRows = $tableBody.find("tr").length > 0;

        // Toggle message visibility
        if (hasRows) {
            $("#noDataMessage").hide();
        } else {
            $("#noDataMessage").show();
        }
    }

   


   

</script>

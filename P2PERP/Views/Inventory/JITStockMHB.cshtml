


@{
    ViewBag.Title = "JITStockMHB";
}

<div class="container mt-4 container-fluid">

    <form id="stockForm" class="bg-white p-4 rounded shadow-sm" novalidate>
        <h3 class="text-center text-primary mb-4 fw-bold">Just In Time - Stock Request</h3>

        <div class="row g-4">
            <!-- 🔹 g-4 adds spacing between fields -->
            <!-- 🔽 Item Name Dropdown -->
            <div class="col-md-5">
                <label for="itemName" class="form-label fw-bold text-dark">Item Name <span class="text-danger">*</span></label>
                <select id="itemName" class="form-select form-select-sm shadow-sm" name="ItemId" required>
                    <option value="">-- Select Item --</option>
                </select>
                <div class="invalid-feedback">Please select an item.</div>
            </div>

            <!-- 🔐 Item Code -->
            <div class="col-md-5">
                <label for="itemCode" class="form-label fw-bold text-dark">Item Code</label>
                <input type="text" class="form-control form-control-sm shadow-sm text-dark bg-light" id="itemCode" name="ItemCode" readonly>
            </div>

            <!-- 📏 UOM -->
            <div class="col-md-5">
                <label for="uom" class="form-label fw-bold text-dark">UOM</label>
                <input type="text" class="form-control form-control-sm shadow-sm text-dark bg-light" id="uom" name="UOM" readonly>
            </div>

            <!-- 🔢 Quantity -->
            <div class="col-md-5">
                <label for="quantity" class="form-label fw-bold text-dark">Quantity <span class="text-danger">*</span></label>
                <input type="number" class="form-control form-control-sm shadow-sm text-dark" id="quantity" name="Quantity"
                       min="1" placeholder="Enter order quantity" required>
                <div class="invalid-feedback">Please enter a valid quantity.</div>
            </div>

            <!-- 📝 Description -->
            <div class="col-md-5">
                <label for="description" class="form-label fw-bold text-dark">Description</label>
                <textarea class="form-control form-control-sm shadow-sm text-dark bg-light" id="description" name="Description" rows="3" readonly></textarea>
            </div>

            <!-- 📅 Required Date -->
            <div class="col-md-5">
                <label for="RequiredDate" class="form-label fw-bold text-dark">Required Date <span class="text-danger">*</span></label>
                <input type="date" id="RequiredDate" name="RequiredDate"
                       class="form-control form-control-sm shadow-sm text-dark"
                       min="@DateTime.Now.ToString("yyyy-MM-dd")" required>
                <div class="invalid-feedback">Please select a valid date.</div>
            </div>

            <!-- ✅ Submit -->
            <div class="col-12 text-end mt-3">
                <button type="submit" class="btn btn-success px-5 py-2 btn-sm " style="margin-right:60px;">Submit</button>
            </div>

        </div>
    </form>
</div>




<script>
    let allItems = [];
    let itemList = [];
    let table;

    $(document).ready(function () {
        const today = new Date().toISOString().split("T")[0];
        $('#year').val(new Date().getFullYear());
        $('#fromDate').attr("min", today);
        $('#toDate').attr("min", today);

        $('#fromDate').on('change', function () {
            $('#toDate').attr("min", $(this).val());
        });

        $.get('/Inventory/GetItemListMHB', function (items) {
            allItems = items;
            updateItemDropdown();
        });

        $('#itemName').on('change', function () {
            const itemId = $(this).val();
            if (!itemId) return;
            $.get('/Inventory/GetItemDetailsMHB', { itemId: itemId }, function (item) {
                $('#itemCode').val(item.ItemCode);
                $('#uom').val(item.UOMName);
                $('#description').val(item.Description);
            });
        });

        // Initialize DataTable
        table = $('#itemsTable').DataTable({
            paging: true, searching: true, ordering: false, info: false, lengthChange: false,
            language: { emptyTable: "No items added yet." }
        });

        // Live validation removal
        $('#itemName, #planName, #quantity, #fromDate, #toDate').on('input change', function () {
            const id = $(this).attr('id');
            const errElem = $('#' + id + 'Error');
            clearError($(this), errElem);
        });

        // Add item button
        $('#btnAdd').click(function () {
            clearError($('#itemName'), $('#itemError'));
            clearError($('#quantity'), $('#qtyError'));

            const itemId = $('#itemName').val();
            const itemName = $('#itemName option:selected').text();
            const itemCode = $('#itemCode').val();
            const uom = $('#uom').val();
            const qty = $('#quantity').val();
            const desc = $('#description').val();

            if (!itemId) {
                showError($('#itemName'), $('#itemError'), 'Please select an item.');
                return;
            }
            if (!qty || qty <= 0) {
                showError($('#quantity'), $('#qtyError'), 'Please enter a valid quantity.');
                return;
            }

            if (itemList.some(x => x.ItemId == itemId)) {
                Swal.fire('Duplicate', 'This item is already added.', 'warning');
                return;
            }

            const item = {
                ItemId: itemId,
                ItemName: itemName,
                ItemCode: itemCode,
                Quantity: qty,
                QuantityMRP: qty,
                UOM: uom,
                Description: desc,
                RequestType: "MRP"
            };

            itemList.push(item);
            renderTable();
            updateItemDropdown();
            clearFields();
        });

        // Remove item
        $('#itemsTable tbody').on('click', '.btn-remove', function () {
            const row = $(this).closest('tr');
            const itemCode = row.find('td:eq(1)').text();
            itemList = itemList.filter(x => x.ItemCode !== itemCode);
            renderTable();
            updateItemDropdown();
        });

        // Form submit
        $('#stockForm').on('submit', function (e) {
            e.preventDefault();
            let valid = true;

            const planName = $('#planName').val().trim();
            const fromDate = $('#fromDate').val();
            const toDate = $('#toDate').val();

            clearError($('#planName'), $('#planError'));
            clearError($('#fromDate'), $('#fromDateError'));
            clearError($('#toDate'), $('#toDateError'));

            if (!planName) {
                showError($('#planName'), $('#planError'), 'Please enter Plan Name.');
                valid = false;
            }
            if (!fromDate) {
                showError($('#fromDate'), $('#fromDateError'), 'Please select From Date.');
                valid = false;
            }
            if (!toDate) {
                showError($('#toDate'), $('#toDateError'), 'Please select To Date.');
                valid = false;
            }
            if (fromDate && toDate && toDate < fromDate) {
                showError($('#toDate'), $('#toDateError'), 'To Date must be after From Date.');
                valid = false;
            }

            if (itemList.length === 0) {
                Swal.fire("⚠️ Warning", "Please add at least one item.", "warning");
                valid = false;
            }

            if (!valid) return;

            Swal.fire({
                title: 'Send Plan for Approval?',
                text: "This action will submit the MRP plan.",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#198754',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, Submit'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({ title: 'Submitting...', text: 'Please wait...', allowOutsideClick: false, didOpen: () => Swal.showLoading() });

                    const payload = {
                        PlanName: planName,
                        Year: $('#year').val(),
                        FromDate: fromDate,
                        ToDate: toDate,
                        Items: itemList
                    };

                    $.ajax({
                        type: 'POST',
                        url: '/Inventory/SubmitPlanForApprovalMHB',
                        contentType: 'application/json',
                        data: JSON.stringify(payload),
                        success: function (res) {
                            if (res.success) {
                                Swal.fire({ icon: 'success', title: '✅ Success', text: 'Plan submitted successfully!', showConfirmButton: false, timer: 1000 });
                                setTimeout(() => {
                                    itemList = [];
                                    renderTable();
                                    updateItemDropdown();
                                    $('#stockForm')[0].reset();
                                    $('#year').val(new Date().getFullYear());
                                    $('#fromDate').attr("min", today);
                                    $('#toDate').attr("min", today);
                                }, 1000);
                            } else Swal.fire('❌ Error', 'Failed to submit plan.', 'error');
                        },
                        error: function () { Swal.fire('❌ Server Error', 'Something went wrong.', 'error'); }
                    });
                }
            });
        });
    });

    // Utility functions
    function showError($input, $errElem, message) {
        $input.addClass('error-border');
        $errElem.text(message).removeClass('d-none');
    }
    function clearError($input, $errElem) {
        $input.removeClass('error-border');
        $errElem.text('').addClass('d-none');
    }

    function updateItemDropdown() {
        const ddl = $("#itemName").empty().append('<option value="">-- Select Item --</option>');
        allItems.forEach(i => {
            if (!itemList.some(g => g.ItemCode === i.ItemCode)) {
                ddl.append(`<option value="${i.ItemId}">${i.ItemName}</option>`);
            }
        });
    }

    function renderTable() {
        table.clear();
        itemList.forEach((item) => {
            table.row.add([
                item.ItemName, item.ItemCode, item.Quantity, item.UOM,
                `<span data-bs-toggle="tooltip" title="${item.Description}">${item.Description}</span>`,
                item.RequestType,
                `<button class="btn btn-sm btn-square btn-remove bg-danger" title="Remove" style="width: 32px; height: 32px;"><i class="bi bi-trash text-white"></i></button>`
            ]);
        });
        table.draw();
    }

    function clearFields() {
        $('#itemName').val('');
        $('#itemCode').val('');
        $('#uom').val('');
        $('#quantity').val('');
        $('#description').val('');
    }
</script>



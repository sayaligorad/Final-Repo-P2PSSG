<div class="container-fluid bg-white" style="min-height:auto">
    <h3 class="text-center text-primary">Material Requirement Planning</h3>

    <form id="stockForm" novalidate>
        <div class="row g-3">

            <!-- Item Dropdown -->
            <div class="col-md-6">
                <label for="itemName" class="form-label form-label-sm fw-bold text-dark">Item Name <span class="required-star">*</span></label>
                <select id="itemName" class="form-select form-select-sm item-select shadow-sm">
                    <option value="">-- Select Item --</option>
                </select>
                <small id="itemError" class="text-danger d-none"></small>
            </div>

            <!-- Plan Name -->
            <div class="col-md-6">
                <label for="planName" class="form-label form-label-sm fw-bold text-dark">Plan Name <span class="required-star">*</span></label>
                <input type="text" id="planName" class="form-control form-control-sm  text-dark shadow-sm" />
                <small id="planError" class="text-danger d-none"></small>
            </div>

            <!-- Year -->
            <div class="col-md-2">
                <label for="year" class="form-label form-label-sm fw-bold text-dark">Year</label>
                <input type="text" id="year" class="form-control bg-light form-control-sm  text-dark shadow-sm" readonly />
            </div>

            <!-- Item Code -->
            <div class="col-md-5">
                <label for="itemCode" class="form-label form-label-sm fw-bold text-dark">Item Code</label>
                <input type="text" id="itemCode" class="form-control bg-light form-control-sm  text-dark shadow-sm" readonly />
            </div>

            <!-- UOM -->
            <div class="col-md-5">
                <label for="uom" class="form-label form-label-sm fw-bold text-dark">UOM</label>
                <input type="text" id="uom" class="form-control bg-light form-control-sm  text-dark shadow-sm" readonly />
            </div>

            <!-- Quantity -->
            <div class="col-md-6">
                <label for="quantity" class="form-label form-label-sm fw-bold text-dark">Quantity <span class="required-star">*</span></label>
                <input type="number" id="quantity" class="form-control form-control-sm  text-dark shadow-sm" />
                <small id="qtyError" class="text-danger d-none"></small>
            </div>

            <!-- Description -->
            <div class="col-md-6">
                <label for="description" class="form-label form-label-sm fw-bold text-dark">Description</label>
                <textarea id="description" class="form-control bg-light form-control-sm  text-dark shadow-sm" readonly></textarea>
            </div>

            <!-- Add Button -->
            <div class="col-md-12 text-end">
                <button type="button" id="btnAdd" class="btn btn-success mt-2 btn-sm ">
                    <i class="bi bi-plus-circle me-2"></i> Add Item
                </button>
            </div>

            <hr />

            <!-- Table -->
            <div class="table-responsive mt-2">
                <table id="itemsTable" class="table table-striped table-bordered text-center align-middle">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>Item Name</th>
                            <th>Item Code</th>
                            <th>Quantity</th>
                            <th>UOM</th>
                            <th>Description</th>
                            <th>Request Type</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>

            <!-- Dates -->
            <div class="row ">
                <div class="col-md-3">
                    <label class="form-label form-label-sm fw-bold text-dark">From Date <span class="required-star">*</span></label>
                    <input type="date" id="fromDate" class="form-control form-control-sm  text-dark shadow-sm" />
                    <small id="fromDateError" class="text-danger d-none"></small>
                </div>
                <div class="col-md-3 mb-2">
                    <label class="form-label form-label-sm fw-bold text-dark">To Date <span class="required-star">*</span></label>
                    <input type="date" id="toDate" class="form-control form-control-sm  text-dark shadow-sm" />
                    <small id="toDateError" class="text-danger d-none"></small>
                </div>
            </div>

            <div class="text-center mb-4">
                <button type="submit" class="btn btn-success btn-sm ">Send for Approval</button>
            </div>
        </div>
    </form>

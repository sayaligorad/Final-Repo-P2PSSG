        function showExportToast() {
            var toastEl = document.getElementById('exportToast');
            var toast = new bootstrap.Toast(toastEl);
            toast.show();
        }


        // ✅ Configure toastr once
        toastr.options = {
            closeButton: true,
            progressBar: true,
            preventDuplicates: true,
            newestOnTop: true,
            positionClass: "toast-top-right",
            timeOut: "3000" // 3 seconds
        };

        // ✅ Helper function for warning toast
        function showExportToast() {
            toastr.warning("Please select at least one row before exporting.", "Warning");
        }




        //modal table

        $(document).on('click', '.view-vendors', function () {
            var rfqCode = $(this).data('rfqcode');

            // 🟦 Show RFQ Code at top of modal
            $('#lblRFQCode').text(rfqCode);


            $.ajax({
                url: '/Purchase/GetRFQVendorResponses',
                type: 'GET',
                data: { rfqCode: rfqCode, _: new Date().getTime() }, // 🧠 cache buster
                success: function (res) {
                    if (res.success) {
                        var $table = $('#rfqVendorTable');
                        var $tbody = $table.find('tbody');
                        $tbody.empty(); // clear old rows

                        // 🔹 Destroy existing DataTable cleanly
                        if ($.fn.DataTable.isDataTable($table)) {
                            $table.DataTable().clear().destroy();
                            $table.find('thead th').removeClass('sorting sorting_asc sorting_desc');
                        }

                        // 🔹 Add new rows with status color
                        $.each(res.data, function (i, item) {
                            let statusBadge = `
        <span class="${item.StatusName === 'Approved' ? 'badge bg-success' :
                                item.StatusName === 'Pending' ? 'badge bg-warning' :
                                    item.StatusName === 'Escalated' ? 'badge bg-primary' :
                                        item.StatusName === 'Rejected' ? 'badge bg-danger' :
                                            'badge bg-secondary'
                                }">
            ${item.StatusName}
        </span>
                            `;
                            

                            $tbody.append(`
                        <tr>
                            <td>${i + 1}</td>
                            <td>${item.RegisterQuotationCode}</td>
                            <td>${item.VendorName}</td>
                            <td>${item.DaysToReceiveQuotation}</td>
                            <td>${item.DaysToApproveQuotation ?? ''}</td>
                            <td class="text-center">${statusBadge}</td>
                        </tr>
                    `);
                        });

                        // 🔹 Reinitialize DataTable (with desired settings)
                        $table.DataTable({
                            scrollX: true,
                            paging: false,
                            searching: false,
                            ordering: false,
                            info: false,
                            destroy: true,
                            columnDefs: [
                                { className: 'text-center', targets: '_all' }
                            ]
                        });

                        // 🔹 Finally, show modal
                        $('#rfqVendorModal').modal('show');
                    } else {
                        toastr.error(res.message || 'No data found.');
                    }
                },
                error: function () {
                    toastr.error('Error loading vendor responses.');
                }
            });
        });




    });
</script>

<!-- ===================== Script Section ===================== -->
<script>
    $(document).ready(function () {


        toastr.options = {
            closeButton: true,
            progressBar: true,
            newestOnTop: true,
            positionClass: "toast-top-right",
            preventDuplicates: true,
            timeOut: 3000,
            extendedTimeOut: 1000,
            showDuration: 300,
            hideDuration: 300,
            showMethod: "slideDown",
            hideMethod: "fadeOut"
        };

        console.log("Initializing DataTable");

        var selectedRowsRejected = [];

        // Initialize DataTable for Approve PR
        var tableRejected = $('#TableRejected').DataTable({
            responsive: true,
            ajax: {
                url: '/Purchase/GetRejectedPRSP',
                type: "GET",
                dataSrc: function (json) {
                    console.log("Data loaded:", json);
                    return json;
                },
                error: function (xhr, error, thrown) {
                    console.error("AJAX error:", error, thrown, xhr.responseText);
                }
            },
            columns: [
                {  // Checkbox for selection
                    data: null,
                    orderable: false,
                    render: function (data, type, row) {
                        return `<input type="checkbox" class="row-select4" data-id="${row.PRCode}">`;
                    }
                },
                { // Serial Number
                    data: null,
                    title: "SR.NO",
                    className: 'no-export',
                    orderable: false,
                    render: function (data, type, row, meta) {
                        return meta.row + 1;
                    }
                },
                { data: "PRCode", title: "PR Code" },
                {  //  Format Added Date
                    data: "AddedDate",
                    title: "Added Date",

                    render: function (data) {
                        if (!data) return "-";
                        var match = /\/Date\((\d+)\)\//.exec(data);
                        if (match) {
                            var date = new Date(parseInt(match[1]));
                            return moment(date).format("DD/MM/YYYY");
                        }
                        return "-";
                    }
                },
                {   // Format Approve Date
                    data: "ApproveRejectedBy",
                    title: "Approve/Reject By",
                    render: function (data) {
                        return data ? data : "-";
                    }
                },
                {   // Format Reject Date
                    data: "ApproveRejectedDate",
                    title: "Approve/Reject Date",
                    render: function (data) {
                        if (!data) return "-";
                        var match = /\/Date\((\d+)\)\//.exec(data);
                        if (match) {
                            var date = new Date(parseInt(match[1]));
                            return moment(date).format("DD/MM/YYYY");
                        }
                        return "-";
                    }
                },
                {   //  Priority Badges
                    data: "Priority",
                    title: "Priority",
                    render: function (data) {
                        if (data === "Hot") return '<span class="badge bg-danger">Hot</span>';
                        if (data === "Warm") return '<span class="badge bg-warning">Warm</span>';
                        if (data === "Cold") return '<span class="badge bg-success">Cold</span>';
                        return '<span class="badge bg-secondary">Unknown</span>';
                    }
                },
                {  //  Status Badges
                    data: "Status",
                    title: "Status",
                    render: function (data) {
                        if (data === "Pending") return '<span class="badge bg-warning">Pending</span>';
                        if (data === "Rejected") return '<span class="badge bg-danger">Rejected</span>';
                        return '<span class="badge bg-success">' + data + '</span>';
                    }
                },
                {
                    data: null,
                    title: "Action",
                    className: 'no-export',
                    orderable: false,
                    render: function (data, type, row) {
                        return `
<button class="btn btn-sm btn-primary view-btn4 square-pill d-inline-flex align-items-center px-2 py-1 shadow-View"
        data-id="${row.PRCode}"
        data-bs-toggle="modal"
        data-bs-target="#RejectededModal"
        title="View PR">
    <i class="bi bi-eye"></i>
</button>`;
                    }
                }

            ],
            columnDefs: [
                { className: "text-center", targets: "_all" }
            ],
            ordering: false,
            dom: '<"d-flex justify-content-between align-items-center mb-2"Bf>rt<"d-flex justify-content-between align-items-center mt-2"ip>',
            buttons: [
                {
                    extend: 'print',
                    text: '<i class="bi bi-printer-fill text-dark fs-5"></i>',
                    title: 'PR Report',
                    exportOptions: {
                        // Print only selected rows
                        rows: function (idx, data, node) {
                            return selectedRowsRejected.includes(data.PRCode);
                        },
                        // Exclude 'no-export' and last column
                        columns: ':visible:not(.no-export):not(:last-child)'
                    },
                    action: function (e, dt, button, config) {
                        if (!selectedRowsRejected || selectedRowsRejected.length === 0) {
                            toastr.warning("Please select at least one PR before printing!");
                            return; // Stop print
                        }
                        $.fn.dataTable.ext.buttons.print.action.call(this, e, dt, button, config);
                    },
                    customize: function (win) {
                        $(win.document.body).css('font-size', '12pt');
                        let table = $(win.document.body).find('table');

                        // 🟦 Clean up any hidden/empty columns before adding SR.NO
                        table.find('thead tr').each(function () {
                            $(this).find('th').filter(function () {
                                return $(this).text().trim() === '' || $(this).is(':hidden');
                            }).remove();
                        });
                        table.find('tbody tr').each(function () {
                            $(this).find('td').filter(function () {
                                return $(this).text().trim() === '' || $(this).is(':hidden');
                            }).remove();
                        });

                        // 🟦 Center the title
                        $(win.document.body).find('h1')
                            .css('text-align', 'center')
                            .css('font-size', '18pt')
                            .css('margin-bottom', '5px');

                        // 🟦 Add Generated Date below title
                        $(win.document.body).find('h1').after(
                            '<div style="text-align:center; margin-bottom:10px; font-size:11pt; font-weight:bold;">' +
                            'Generated Date: ' + moment().format("DD/MM/YYYY") +
                            '</div>'
                        );

                        // 🟦 Add SR.NO column at first position
                        let headerRow = table.find('thead tr');
                        headerRow.prepend('<th style="text-align:center;">SR.NO</th>');

                        // 🟦 Add SR.NO data in body rows
                        table.find('tbody tr').each(function (i) {
                            $(this).prepend('<td style="text-align:center;">' + (i + 1) + '</td>');
                        });

                        // 🟦 Table styling
                        table.addClass('display')
                            .css('width', '100%')
                            .css('border-collapse', 'collapse')
                            .css('font-size', 'inherit');

                        // 🟦 Add borders for better print look
                        table.find('th, td').css({
                            'border': '1px solid #000',
                            'padding': '4px',
                            'text-align': 'center'
                        });
                    }
                },



                {
                    extend: 'pdfHtml5',
                    text: '<i class="bi bi-file-earmark-pdf text-danger fs-5"></i>',
                    title: 'PR Report',
                    exportOptions: {
                        // Include all visible columns except last one or 'no-export' class
                        columns: ':visible:not(.no-export):not(:last-child)',
                        rows: function (idx, data, node) {
                            return selectedRowsRejected.includes(data.PRCode); // Only selected rows
                        }
                    },
                    action: function (e, dt, button, config) {
                        if (!selectedRowsRejected || selectedRowsRejected.length === 0) {
                            toastr.warning("Please select at least one PR before exporting!");
                            return;
                        }
                        $.fn.dataTable.ext.buttons.pdfHtml5.action.call(this, e, dt, button, config);
                    },
                    customize: function (doc) {
                        // Title style
                        doc.styles.title = { fontSize: 16, bold: true, alignment: 'center', margin: [0, 0, 0, 12] };

                        // Add generated date
                        doc.content.splice(1, 0, {
                            text: 'Generated Date: ' + moment().format("DD/MM/YYYY"),
                            alignment: 'center',
                            margin: [0, 0, 0, 12],
                            fontSize: 11
                        });

                        // Find table
                        var tableNode = doc.content.find(n => n.table);
                        if (tableNode) {
                            // Fix: Clean any hidden/empty cells before adding Sr No
                            tableNode.table.body = tableNode.table.body.map(row => row.filter(cell => cell.text !== ''));

                            // Add SR.NO to all rows including header
                            tableNode.table.body.forEach((row, index) => {
                                if (index === 0) {
                                    // Header row
                                    row.unshift({
                                        text: 'SR.NO',
                                        color: 'white',
                                        fillColor: '#343a40',
                                        alignment: 'center',
                                        bold: true,
                                        fontSize: 11
                                    });
                                } else {
                                    // Data rows
                                    row.unshift({
                                        text: index.toString(),
                                        alignment: 'center',
                                        fontSize: 10
                                    });
                                }

                                // Styling each cell
                                row.forEach(cell => {
                                    cell.alignment = 'center';
                                    cell.margin = [4, 3, 4, 3];
                                    if (index === 0) {
                                        cell.color = 'white';
                                        cell.fillColor = '#343a40';
                                        cell.bold = true;
                                    }
                                });
                            });

                            // Dynamic widths for all columns
                            const columnCount = tableNode.table.body[0].length;
                            tableNode.table.widths = Array(columnCount).fill('*');

                            // Table borders
                            tableNode.layout = {
                                fillColor: rowIndex => rowIndex === 0 ? '#343a40' : null,
                                hLineColor: () => '#ccc',
                                vLineColor: () => '#ccc',
                                hLineWidth: () => 0.5,
                                vLineWidth: () => 0.5
                            };
                        }

                        // Page margins
                        doc.pageMargins = [40, 60, 40, 40];
                    }
                }
,

                {
                    extend: 'excelHtml5',
                    text: '<i class="bi bi-file-earmark-excel text-success fs-5"></i>',
                    title: '', // We'll insert title manually
                    exportOptions: {
                        rows: function (idx, data, node) {
                            return selectedRowsRejected.includes(data.PRCode);
                        },
                        columns: function (idx, data, node) {
                            return !$(node).hasClass('no-export') && idx !== $('#TableRejected thead th').length - 1;
                        }
                    },
                    action: function (e, dt, button, config) {
                        if (!selectedRowsRejected || selectedRowsRejected.length === 0) {
                            toastr.warning("Please select at least one PR before exporting!");
                            return; // Stop Excel export
                        }
                        $.fn.dataTable.ext.buttons.excelHtml5.action.call(this, e, dt, button, config);
                    },
                    customize: function (xlsx) {
                        var sheet = xlsx.xl.worksheets['sheet1.xml'];
                        var sheetData = $('sheetData', sheet);

                        // Count table columns
                        var headerCount = $('#TableRejected thead th').length;
                        if (headerCount <= 0) headerCount = 1;

                        // Convert column number → Excel column letter (A, B, C, ...)
                        function numToColumn(n) {
                            var s = '';
                            while (n > 0) {
                                var m = (n - 1) % 26;
                                s = String.fromCharCode(65 + m) + s;
                                n = Math.floor((n - 1) / 26);
                            }
                            return s;
                        }
                        var lastCol = numToColumn(headerCount);

                        // Shift all existing rows down by 2 (title + date)
                        $('row', sheetData).each(function () {
                            var $row = $(this);
                            var oldR = parseInt($row.attr('r'), 10);
                            var newR = oldR + 2;
                            $row.attr('r', newR);
                            $row.find('c').each(function () {
                                var $c = $(this);
                                var ref = $c.attr('r');
                                if (ref) {
                                    var col = ref.replace(/[0-9]/g, '');
                                    $c.attr('r', col + newR);
                                }
                            });
                        });

                        // Generate date (DD-MM-YYYY)
                        var now = new Date();
                        var formattedDate =
                            ("0" + now.getDate()).slice(-2) + "/" +
                            ("0" + (now.getMonth() + 1)).slice(-2) + "/" +
                            now.getFullYear();

                        var title = 'PR Report';
                        var dateText = 'Generated Date: ' + formattedDate;

                        // Add Title and Date rows
                        var titleRow = `
<row r="1">
    <c t="inlineStr" s="51" r="A1"><is><t>${title}</t></is></c>
</row>`;
                        var dateRow = `
<row r="2">
    <c t="inlineStr" s="51" r="A2"><is><t>${dateText}</t></is></c>
</row>`;

                        sheetData.prepend(dateRow);
                        sheetData.prepend(titleRow);

                        // Merge cells across all table columns
                        var mergeRef1 = 'A1:' + lastCol + '1';
                        var mergeRef2 = 'A2:' + lastCol + '2';
                        var mergeCells = $('mergeCells', sheet);

                        if (mergeCells.length === 0) {
                            var mergeXml = `<mergeCells count="2">
            <mergeCell ref="${mergeRef1}"/>
            <mergeCell ref="${mergeRef2}"/>
        </mergeCells>`;
                            $(sheet).find('worksheet').append(mergeXml);
                        } else {
                            var count = parseInt(mergeCells.attr('count') || '0', 10);
                            mergeCells.attr('count', count + 2);
                            mergeCells.append(`<mergeCell ref="${mergeRef1}"/>`);
                            mergeCells.append(`<mergeCell ref="${mergeRef2}"/>`);
                        }

                        // Apply center + bold style to title and date
                        $('row[r="1"] c', sheet).attr('s', '51');
                        $('row[r="2"] c', sheet).attr('s', '51');

                        // --- ADD Sr. No. HEADING ---
                        $('row', sheetData).each(function () {
                            var $row = $(this);
                            var rowNum = parseInt($row.attr('r'), 10);
                            if (rowNum === 3) { // header row
                                // Directly add "Sr. No." at column A
                                var srHeading = `<c t="inlineStr" s="51" r="A3"><is><t>Sr. No</t></is></c>`;
                                // Prepend without shifting existing header cells
                                $row.prepend(srHeading);
                            }
                        });

                        // --- ADD Sr. No. TO DATA ROWS ---
                        $('row', sheetData).each(function () {
                            var $row = $(this);
                            var rowNum = parseInt($row.attr('r'), 10);
                            if (rowNum > 3) { // skip title, date, header
                                // Directly add Sr. No. cell in column A
                                var srNo = rowNum - 3;
                                var srCell = `<c t="inlineStr" r="A${rowNum}"><is><t>${srNo}</t></is></c>`;
                                $row.prepend(srCell);
                            }
                        });
                    }

                },
                {
                    extend: 'csvHtml5',
                    text: '<i class="bi bi-filetype-csv text-success fs-5"></i>',
                    title: 'PR Report',
                    exportOptions: {
                        rows: function (idx, data, node) {
                            return selectedRowsRejected.includes(data.PRCode);
                        },
                        columns: ':not(.no-export):not(:last-child)' // Exclude action/hidden columns
                    },
                    customize: function (csv) {
                        var lines = csv.split('\n');

                        if (lines.length > 1) {
                            // Clean and remove first empty column if present
                            lines = lines.map(line => {
                                // Split properly even if values contain quotes
                                var cols = line.split(',');

                                // If the first column is blank or quotes only, remove it
                                if (cols.length > 1 && (cols[0].trim() === '' || cols[0].trim() === '""')) {
                                    cols.shift();
                                }

                                // Remove any remaining fully empty columns
                                cols = cols.filter(col => col.trim() !== '' && col.trim() !== '""');

                                return cols.join(',');
                            });

                            // Add "Sr No" header manually
                            lines[0] = 'Sr No,' + lines[0];

                            // Add serial number for each data row
                            for (var i = 1; i < lines.length; i++) {
                                if (lines[i].trim() !== '') {
                                    lines[i] = i + ',' + lines[i];
                                }
                            }
                        }

                        return lines.join('\n');
                    },
                    action: function (e, dt, button, config) {
                        if (!selectedRowsRejected || selectedRowsRejected.length === 0) {
                            toastr.warning("Please select at least one PR before exporting!");
                            return;
                        }
                        $.fn.dataTable.ext.buttons.csvHtml5.action.call(this, e, dt, button, config);
                    }
                }




            ]
        });

        function initTooltips() {
            var selector = '[title], [data-bs-title]';
            var els = Array.prototype.slice.call(document.querySelectorAll(selector));

            els.forEach(function (el) {
                var existing = bootstrap.Tooltip.getInstance(el);
                if (existing) existing.dispose();

                var hasTitle = el.getAttribute('title')?.trim() !== '';
                var hasDataTitle = el.getAttribute('data-bs-title')?.trim() !== '';

                if (hasTitle || hasDataTitle) {
                    new bootstrap.Tooltip(el, { container: 'body' });
                }
            });
        }

        initTooltips();
        $('#TableRejected').on('draw.dt', initTooltips);
        $('#RejectededModal').on('shown.bs.modal', initTooltips);

        // ✅ Dispose tooltip on button click so it disappears immediately
        $(document).on("click", ".view-btn4", function () {
            var tooltip = bootstrap.Tooltip.getInstance(this);
            if (tooltip) tooltip.dispose();
        });






        // Initialize Date Range Picker
        var tableStartDate = null;
        var tableEndDate = null;

        var table = $('#TableRejected').DataTable();

        // Initialize Date Range Picker
        $('#Rejectedrange4').daterangepicker({
            autoUpdateInput: false,
            locale: {
                format: 'DD/MM/YYYY',
                cancelLabel: 'Clear'
            },
            ranges: {
                'Today': [moment(), moment()],
                'Last 7 Days': [moment().subtract(6, 'days'), moment()],
                'Last 1 Month': [moment().subtract(1, 'months').startOf('day'), moment()],
                'Last 3 Months': [moment().subtract(3, 'months').startOf('day'), moment()],
                'Last 1 Year': [moment().subtract(12, 'months').startOf('day'), moment()]
            }
        });

        // Apply filter on selection
        $('#Rejectedrange4').on('apply.daterangepicker', function (ev, picker) {
            tableStartDate = picker.startDate;
            tableEndDate = picker.endDate;

            $(this).val(tableStartDate.format('DD/MM/YYYY') + ' - ' + tableEndDate.format('DD/MM/YYYY'));

            // Remove existing date filter first
            $.fn.dataTable.ext.search = $.fn.dataTable.ext.search.filter(function (fn) {
                return !fn.name || fn.name !== 'dateRangeFilter';
            });

            // Push new filter
            $.fn.dataTable.ext.search.push(function dateRangeFilter(settings, data, dataIndex) {
                if (!tableStartDate || !tableEndDate) return true;
                var date = moment(data[3], 'DD/MM/YYYY'); // 6th column (index 5)
                if (!date.isValid()) return true;
                return date.isBetween(tableStartDate, tableEndDate, 'day', '[]');
            });

            table.draw(); // Use your DataTable instance
        });

        // Reset filter on cancel
        $('#Rejectedrange4').on('cancel.daterangepicker', function (ev, picker) {
            tableStartDate = null;
            tableEndDate = null;
            $(this).val('');

            // Remove date filter
            $.fn.dataTable.ext.search = $.fn.dataTable.ext.search.filter(function (fn) {
                return !fn.name || fn.name !== 'dateRangeFilter';
            });

            table.draw();
        });


        // Row Selection
        $(document).on('change', '.row-select4', function () {
            let id = $(this).data('id');

            if (this.checked) {
                if (!selectedRowsRejected.includes(id)) {
                    selectedRowsRejected.push(id);
                }
            } else {
                selectedRowsRejected = selectedRowsRejected.filter(x => x !== id);
            }

            // ✅ Update "Select All" checkbox automatically
            var allChecked = $('.row-select4').length === $('.row-select4:checked').length;
            $('#selectAll4').prop('checked', allChecked);
        });

        // ✅ Select All Checkbox
        $(document).on('click', '#selectAll4', function () {
            var checked = this.checked;
            $('.row-select4').each(function () {
                $(this).prop('checked', checked).trigger('change');
            });
        });
    });

    // ===================== View Modal Loader =====================
    $(document).on("click", ".view-btn4", function () {
        var prCode = $(this).data("id");

        // First Ajax: Load Requisition Info
        $.ajax({
            url: '/Purchase/DescriptionSP',
            type: 'POST',
            data: { id: prCode },
            success: function (response) {
                if (response.success) {
                    var formattedDate = moment(response.data.RequiredDate).format("DD/MM/YYYY");

                    $("#PRCODE4").text(response.data.PRCode);
                    $("#RequiredDate4").text(formattedDate);
                    $("#FullName4").text(response.data.FullName);
                    $("#Status4").text(response.data.Status);
                    $("#Description1").text(response.data.Description);

                }
            },
            error: function (xhr, status, error) {
                console.error("AJAX Error:", status, error, xhr.responseText);
            }
        });

        // Destroy if already initialized
        if ($.fn.DataTable.isDataTable('#ViewItems4')) {
            $('#ViewItems4').DataTable().clear().destroy();
        }

        // Second Ajax: Load Items into DataTable
        $('#ViewItems4').DataTable({
            responsive: true,
            paging: true,
            searching: true,
            ordering: false,
            info: true,
            lengthChange: true,
            pageLength: 10,

            ajax: {
                url: '/Purchase/ItemPartialSP',
                type: "POST",
                data: { id: prCode },
                dataSrc: function (json) {
                    console.log("Items loaded:", json);
                    return json.success ? json.data : [];
                },
                error: function (xhr, error, thrown) {
                    console.error("AJAX error:", error, thrown, xhr.responseText);
                }
            },

            columns: [
                {
                    data: null, orderable: false, searchable: false,
                    render: function (data, type, row, meta) {
                        return meta.row + 1;
                    }
                },
                { data: "ItemCode", title: "ITEM CODE" },
                { data: "ItemName", title: "ITEM NAME" },
                {
                    data: "Description", title: "DESCRIPTION",
                    createdCell: function (td, cellData) {
                        if (cellData) {
                            let shortText = cellData.length > 25 ? cellData.substring(0, 25) + "..." : cellData;
                            $(td)
                                .text(shortText)
                                .attr("title", cellData)                 // Tooltip content
                                .attr("data-bs-placement", "top")        // Optional direction
                                .attr("data-bs-toggle", "tooltip");      // Required!
                        }
                    }
                },
                { data: "RequiredQuantity", title: "QTY" },
                {
                    data: "UnitRate",
                    title: "UNIT RATE",
                    render: function (data, type, row)
                    {
                        if (!data) return "₹ 0.00";
                        return "₹ " + parseFloat(data).toLocaleString("en-IN",
                            {
                            minimumFractionDigits: 2,
                            maximumFractionDigits: 2
                        });
                    }
                },
                {
                    data: "Amount",
                    title: "AMOUNT",
                    render: function (data, type, row) {
                        if (!data) return "₹ 0.00";
                        return "₹ " + parseFloat(data).toLocaleString("en-IN", {
                            minimumFractionDigits: 2,
                            maximumFractionDigits: 2
                        });
                    }
                }
            ],
            columnDefs: [
                { className: "text-center", targets: "_all" }
            ],

            ordering: false,
            dom: '<"d-flex justify-content-between align-items-center mb-2"Bf>rt<"d-flex justify-content-between align-items-center mt-2"ip>',

            buttons: [
                {
                    extend: 'print',
                    text: '<i class="bi bi-printer-fill text-dark fs-5"></i>',
                    title: '',
                    customize: function (win) {

                        // ✅ Inject CSS into Printed Document (MOST IMPORTANT)
                        $(win.document.head).append(`
                <style>
                    table.dataTable {
                        border-collapse: collapse !important;

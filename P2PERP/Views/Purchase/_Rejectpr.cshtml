    <tr>
        <td><b>PR CODE :</b> ${prCode}</td>
        <td><b>Required Date :</b> ${reqDate}</td>
    </tr>
    <tr>
        <td><b>Created By :</b> ${fullName}</td>
        <td><b>Status :</b> ${status}</td>
    </tr>
    <tr>
    <td><b>Description :</b> ${desc}</td>
</tr>
</table>
`;

                        // Insert header at top
                        $(win.document.body).prepend(headerHtml);

                        // Center align 1st column (SR.No)
                        $(win.document.body).find('table.dataTable tbody tr td:first-child')
                            .css('text-align', 'center');
                    }
                }
            ],

            language: {
                lengthMenu: ""
            }
        });
    });
</script>

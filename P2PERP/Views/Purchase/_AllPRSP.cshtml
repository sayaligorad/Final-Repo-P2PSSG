    // ✅ Single “Save All” button
    $(document).on("click", "#btnSaveAllUpdates", function () {
        let updatedRows = itemTableUpdate.rows().data().toArray();
        let allUpdates = [];

        // Collect updated data
        $('#ItemTableUpdate tbody tr').each(function (i) {
            let qty = parseInt($(this).find('.qty-input').val(), 10);
            if (!isNaN(qty) && qty > 0) {
                let rowData = updatedRows[i];
                allUpdates.push({
                    PRItemId: rowData.PRItemId,
                    requiredQuantity: qty
                });
            }
        });

        if (allUpdates.length === 0) {
            Swal.fire("No Changes", "Please update at least one quantity before saving.", "info");
            return;
        }

        Swal.fire({
            title: "Confirm Save",
            text: "Do you want to save all updated quantities?",
            icon: "question",
            showCancelButton: true,
            confirmButtonText: '<i class="bi bi-check-circle me-1"></i>Yes, Save it!',
            cancelButtonText: '<i class="bi bi-x-circle me-1"></i> Cancel',
            customClass: {
                cancelButton: 'btn btn-danger  square-pill d-inline-flex align-items-center px-2 py-1 shadow-Cancel me-2',
                confirmButton: 'btn btn-success square-pill d-inline-flex align-items-center px-2 py-1 shadow-Yes, Save it! me-2'
            },
            buttonsStyling: false 
        }).then((result) => {
            if (!result.isConfirmed) return;

            let updatePromises = allUpdates.map(item =>
                $.ajax({
                    url: '/Purchase/UpdateItemQuantitySP',
                    type: 'POST',
                    data: { PRItemId: item.PRItemId, requiredQuantity: item.requiredQuantity }
                })
            );

            Promise.all(updatePromises)
                .then(() => {
                    Swal.fire({
                        icon: "success",
                        title: "Saved!",
                        text: "All quantities updated successfully!",
                        showConfirmButton: false,
                        timer: 2000
                    }).then(() => {
                        $('#updateModal').modal('hide');
                    });
                })
                .catch(() => {
                    Swal.fire("Error", "Some updates failed. Please try again.", "error");
                });
        });
    });


<!-- ===================== Script Section ===================== -->
<script>
    $(document).ready(function () {

        toastr.options = {
            closeButton: true,
            progressBar: true,
            newestOnTop: true,
            positionClass: "toast-top-right",
            preventDuplicates: true,
            timeOut: 3000,
            extendedTimeOut: 1000,
            showDuration: 300,
            hideDuration: 300,
            showMethod: "slideDown",
            hideMethod: "fadeOut"
        };

        console.log("Initializing DataTable");

        var selectedRowsAll = [];

        // Initialize DataTable for Pending PR
        var tableAll = $('#requisitionTable').DataTable({
            responsive: true,
            processing: false,
            language: {
                processing: ""
            },
            ajax: {
                url: '/Purchase/GetAllRequisitionJsonSP',
                type: "GET",
                dataSrc: function (json) {
                    console.log("Data loaded:", json);
                    return json;
                },
                error: function (xhr, error, thrown) {
                    console.error("AJAX error:", error, thrown, xhr.responseText);
                }
            },
            columns: [
                { //  Checkbox for selection
                    data: null,
                    orderable: false,
                    className: 'no-export',
                    render: function (data, type, row) {
                        return `<input type="checkbox" class="row-select" data-id="${row.PRCode}">`;
                    }
                },
                { //  Serial Number
                    data: null,
                    title: "SR.NO",
                    className: 'no-export',
                    orderable: false,
                    render: function (data, type, row, meta) {
                        return meta.row + 1;
                    }
                },
                { data: "PRCode", title: "PR Code" },
                {  //  Format Added Date
                    data: "AddedDate",
                    title: "Added Date",
                    render: function (data) {
                        if (!data) return "-";
                        var match = /\/Date\((\d+)\)\//.exec(data);
                        if (match) {
                            var date = new Date(parseInt(match[1]));
                            return moment(date).format("DD/MM/YYYY");
                        }
                        return "-";
                    }
                },
                {   //  Format Approve Date
                    data: "ApproveRejectedBy",
                    title: "Approve/Reject By",
                    render: function (data) {
                        return data ? data : "-";
                    }
                },
                {   //  Format Reject Date
                    data: "ApproveRejectedDate",
                    title: "Approve/Reject Date",
                    render: function (data) {
                        if (!data) return "-";
                        var match = /\/Date\((\d+)\)\//.exec(data);
                        if (match) {
                            var date = new Date(parseInt(match[1]));
                            return moment(date).format("DD/MM/YYYY");
                        }
                        return "-";
                    }
                },
                {   //  Priority Badges
                    data: "Priority",
                    title: "Priority",
                    render: function (data) {
                        if (data === "Hot") return '<span class="badge bg-danger">Hot</span>';
                        if (data === "Warm") return '<span class="badge bg-warning">Warm</span>';
                        if (data === "Cold") return '<span class="badge bg-success">Cold</span>';
                        return '<span class="badge bg-secondary">Unknown</span>';
                    }
                },
                {  //  Status Badges
                    data: "Status",
                    title: "Status",
                    render: function (data) {
                        if (data === "Pending") return '<span class="badge bg-warning">Pending</span>';
                        if (data === "Rejected") return '<span class="badge bg-danger">Rejected</span>';
                        return '<span class="badge bg-success">' + data + '</span>';
                    }
                },
                {
                    data: null,
                    title: "Action",
                    className: 'no-export',
                    orderable: false,
                    render: function (data, type, row) {
                        if (row.Status === "Pending") {
                            return `
<div class="d-flex gap-1">
    <!-- Update Button -->
    <button class="btn btn-sm btn-secondary update-btn square-pill d-inline-flex align-items-center px-2 py-1 shadow-Update"
        data-id="${row.PRCode}"
        data-bs-toggle="tooltip"
        data-bs-title="Update PR"
        onclick="$('#updateModal').modal('show')">
        <i class="bi bi-pencil"></i>
    </button>

    <!-- View Button -->
    <button class="btn btn-sm btn-primary view-btn square-pill d-inline-flex align-items-center px-2 py-1 shadow-View"
        data-id="${row.PRCode}"
        data-bs-toggle="tooltip"
        data-bs-title="View PR"
        onclick="$('#purchaseRequisitionModal').modal('show')">
        <i class="bi bi-eye"></i>
    </button>
</div>`;
                        }

                        if (row.Status === "Approved" || row.Status === "Rejected") {
                            return `
<button class="btn btn-sm btn-primary view-btn square-pill d-inline-flex align-items-center px-2 py-1 shadow-View"
    data-id="${row.PRCode}"
    data-bs-toggle="tooltip"
    data-bs-title="View PR"
    onclick="$('#purchaseRequisitionModal').modal('show')">
    <i class="bi bi-eye"></i>
</button>`;
                        }

                        return '';
                    }
                }
            ],
            columnDefs: [
                { className: "text-center", targets: "_all" }
            ],
            ordering: false,
            dom: '<"d-flex justify-content-between align-items-center mb-2"Bf>rt<"d-flex justify-content-between align-items-center mt-2"ip>',
            buttons: [
                {
                    extend: 'print',
                    text: '<i class="bi bi-printer-fill text-dark fs-5"></i>',
                    title: 'PR Report',
                    exportOptions: {
                        rows: function (idx, data, node) {
                            return selectedRowsAll.includes(data.PRCode);
                        },
                        columns: function (idx, data, node) {
                            return !$(node).hasClass('no-export') && idx !== $('#requisitionTable thead th').length - 1;
                        }
                    },
                    action: function (e, dt, button, config) {
                        if (!selectedRowsAll || selectedRowsAll.length === 0) {
                            toastr.warning(" Please select at least one PR before printing!");
                            return; // Stop print
                        }
                        $.fn.dataTable.ext.buttons.print.action.call(this, e, dt, button, config);
                    },
                    customize: function (win) {
                        $(win.document.body).css('font-size', '12pt');
                        let table = $(win.document.body).find('table');

                        // Center the title
                        $(win.document.body).find('h1').css('text-align', 'center');

                        // Add Generated Date below the title
                        $(win.document.body).find('h1').after(
                            '<div style="text-align:center; margin-bottom:10px; font-size:11pt; font-weight:bold;">' +
                            'Generated Date: ' + moment().format("DD/MM/YYYY") +
                            '</div>'
                        );

                        // Add SR NO column in header
                        let headerRow = table.find('thead tr');
                        headerRow.prepend('<th style="text-align:center">SR.NO</th>');

                        // Add SR NO values in body rows
                        table.find('tbody tr').each(function (i) {
                            $(this).prepend('<td style="text-align:center">' + (i + 1) + '</td>');
                        });

                        // Table styling
                        table.addClass('display').css('font-size', 'inherit');
                    }
                },
                {
                    extend: 'pdfHtml5',
                    text: '<i class="bi bi-file-earmark-pdf text-danger fs-5"></i>',
                    title: 'PR Report',
                    exportOptions: {
                        // Exclude columns with class 'no-export' AND last column
                        columns: function (idx, data, node) {
                            return !$(node).hasClass('no-export') && idx !== $('#requisitionTable thead th').length - 1;
                        },
                        rows: function (idx, data, node) {
                            return selectedRowsAll.includes(data.PRCode); // Only selected rows
                        }
                    },
                    action: function (e, dt, button, config) {
                        if (!selectedRowsAll || selectedRowsAll.length === 0) {
                            toastr.warning(" Please select at least one PR before exporting!")
                            return; // Stop PDF export
                        }
                        $.fn.dataTable.ext.buttons.pdfHtml5.action.call(this, e, dt, button, config);
                    },
                    customize: function (doc) {
                        // Title style
                        doc.styles.title = {
                            fontSize: 16,
                            bold: true,
                            alignment: 'center',
                            margin: [0, 0, 0, 12]
                        };
                        doc.content.splice(1, 0, {
                            text: 'Generated Date: ' + moment().format("DD/MM/YYYY"),
                            alignment: 'center',
                            margin: [0, 0, 0, 12],
                            fontSize: 11
                        });

                        // Find the table node
                        var tableNode = doc.content.find(n => n.table);
                        if (tableNode) {
                            // Add SR NO column at start
                            tableNode.table.body[0].unshift({
                                text: 'SR.NO',
                                color: 'white',
                                fillColor: '#343a40',
                                alignment: 'center',
                                bold: true,
                                fontSize: 11
                            });

                            // Make all header cells white
                            tableNode.table.body[0].forEach(cell => {
                                cell.color = 'white';
                                cell.fillColor = '#343a40';
                                cell.bold = true;
                                cell.alignment = 'center';
                                cell.fontSize = 11;
                            });

                            // Add SR NO values and style body rows
                            let srNo = 1;
                            tableNode.table.body.slice(1).forEach(row => {
                                row.unshift({
                                    text: srNo.toString(),
                                    alignment: 'center',
                                    fontSize: 10
                                });
                                srNo++;

                                row.forEach(cell => {
                                    cell.fontSize = 10;
                                    cell.alignment = 'center';
                                    cell.margin = [4, 3, 4, 3];
                                });
                            });

                            // Adjust column widths including SR NO
                            tableNode.table.widths = ['8%', '12%', '15%', '15%', '15%', '10%', '15%', '10%'];

                            // Table borders
                            tableNode.layout = {
                                fillColor: function (rowIndex) { return rowIndex === 0 ? '#343a40' : null; },
                                hLineColor: () => '#ccc',
                                vLineColor: () => '#ccc',
                                hLineWidth: () => 0.5,
                                vLineWidth: () => 0.5
                            };
                        }

                        // Page margins
                        doc.pageMargins = [40, 60, 40, 40];
                    }
                },

                {
                    extend: 'excelHtml5',
                    text: '<i class="bi bi-file-earmark-excel text-success fs-5"></i>',
                    title: '', // we'll add manually
                    exportOptions: {
                        rows: function (idx, data, node) {
                            return selectedRowsAll.includes(data.PRCode);
                        },
                        columns: function (idx, data, node) {
                            return !$(node).hasClass('no-export') && idx !== $('#requisitionTable thead th').length - 1;
                        }
                    },
                    action: function (e, dt, button, config) {
                        if (!selectedRowsAll || selectedRowsAll.length === 0) {
                            toastr.warning("Please select at least one PR before exporting!");
                            return;
                        }
                        $.fn.dataTable.ext.buttons.excelHtml5.action.call(this, e, dt, button, config);
                    },
                    customize: function (xlsx) {
                        var sheet = xlsx.xl.worksheets['sheet1.xml'];
                        var sheetData = $('sheetData', sheet);

                        // Count table columns
                        var headerCount = $('#requisitionTable thead th').length;
                        if (headerCount <= 0) headerCount = 1;

                        // Convert column number → Excel column letter (A, B, C, ...)
                        function numToColumn(n) {
                            var s = '';
                            while (n > 0) {
                                var m = (n - 1) % 26;
                                s = String.fromCharCode(65 + m) + s;
                                n = Math.floor((n - 1) / 26);
                            }
                            return s;
                        }
                        var lastCol = numToColumn(headerCount);

                        // Shift all existing rows down by 2 (title + date)
                        $('row', sheetData).each(function () {
                            var $row = $(this);
                            var oldR = parseInt($row.attr('r'), 10);
                            var newR = oldR + 2;
                            $row.attr('r', newR);
                            $row.find('c').each(function () {
                                var $c = $(this);
                                var ref = $c.attr('r');
                                if (ref) {
                                    var col = ref.replace(/[0-9]/g, '');
                                    $c.attr('r', col + newR);
                                }
                            });
                        });

                        // Generate date (DD-MM-YYYY)
                        var now = new Date();

                        var formattedDate =
                            ("0" + now.getDate()).slice(-2) + "/" +
                            ("0" + (now.getMonth() + 1)).slice(-2) + "/" +
                            now.getFullYear();

                        var title = 'PR Report';
                        var dateText = 'Generated Date: ' + formattedDate;


                        // Add Title and Date rows
                        var titleRow = `
<row r="1">
    <c t="inlineStr" s="51" r="A1"><is><t>${title}</t></is></c>
</row>`;
                        var dateRow = `
<row r="2">
    <c t="inlineStr" s="51" r="A2"><is><t>${dateText}</t></is></c>
</row>`;

                        sheetData.prepend(dateRow);
                        sheetData.prepend(titleRow);

                        // Merge cells across all table columns
                        var mergeRef1 = 'A1:' + lastCol + '1';
                        var mergeRef2 = 'A2:' + lastCol + '2';
                        var mergeCells = $('mergeCells', sheet);

                        if (mergeCells.length === 0) {
                            var mergeXml = `<mergeCells count="2">
            <mergeCell ref="${mergeRef1}"/>
            <mergeCell ref="${mergeRef2}"/>
        </mergeCells>`;
                            $(sheet).find('worksheet').append(mergeXml);
                        } else {
                            var count = parseInt(mergeCells.attr('count') || '0', 10);
                            mergeCells.attr('count', count + 2);
                            mergeCells.append(`<mergeCell ref="${mergeRef1}"/>`);
                            mergeCells.append(`<mergeCell ref="${mergeRef2}"/>`);
                        }

                        // Apply center + bold style to title and date
                        $('row[r="1"] c', sheet).attr('s', '51');
                        $('row[r="2"] c', sheet).attr('s', '51');

                        // --- ADD Sr. No. HEADING ---
                        $('row', sheetData).each(function () {
                            var $row = $(this);
                            var rowNum = parseInt($row.attr('r'), 10);
                            if (rowNum === 3) { // header row
                                // Shift existing header cells one column to the right
                                $row.find('c').each(function () {
                                    var $c = $(this);
                                    var ref = $c.attr('r');
                                    if (ref) {
                                        var col = ref.replace(/[0-9]/g, '');
                                        var row = ref.replace(/\D/g, '');
                                        var newCol = String.fromCharCode(col.charCodeAt(0) + 1);
                                        $c.attr('r', newCol + row);
                                    }
                                });
                                // Add "Sr. No." in column A
                                var srHeading = `<c t="inlineStr" r="A3"><is><t>Sr.No</t></is></c>`;
                                $row.prepend(srHeading);
                            }
                        });

                        // --- ADD Sr. No. TO DATA ROWS ---
                        $('row', sheetData).each(function () {
                            var $row = $(this);
                            var rowNum = parseInt($row.attr('r'), 10);
                            if (rowNum > 3) { // skip title, date, header
                                // Shift existing cells one column to the right
                                $row.find('c').each(function () {
                                    var $c = $(this);
                                    var ref = $c.attr('r');
                                    if (ref) {
                                        var col = ref.replace(/[0-9]/g, '');
                                        var row = ref.replace(/\D/g, '');
                                        var newCol = String.fromCharCode(col.charCodeAt(0) + 1);
                                        $c.attr('r', newCol + row);
                                    }
                                });
                                // Add Sr. No. cell in column A
                                var srNo = rowNum - 3; // because data starts at row 4
                                var srCell = `<c t="inlineStr" r="A${rowNum}"><is><t>${srNo}</t></is></c>`;
                                $row.prepend(srCell);
                            }
                        });
                    }
                },
                {
                    extend: 'csvHtml5',
                    text: '<i class="bi bi-filetype-csv text-success fs-5"></i>',
                    title: 'PR Report',
                    exportOptions: {
                        rows: function (idx, data, node) {
                            return selectedRowsAll.includes(data.PRCode);
                        },
                        columns: function (idx, data, node) {

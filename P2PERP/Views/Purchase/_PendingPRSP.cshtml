    $(document).on("click", "#btnSaveAllUpdates2", function () {
        let updatedRows = itemTableUpdate2.rows().data().toArray();
        let allUpdates = [];

        $("#ItemTableUpdate2 tbody tr").each(function (i) {
            let qty = parseInt($(this).find(".qty-input").val(), 10);
            if (!isNaN(qty) && qty > 0) {
                let rowData = updatedRows[i];
                allUpdates.push({
                    PRItemId: rowData.PRItemId,
                    requiredQuantity: qty
                });
            }
        });

        if (allUpdates.length === 0) {
            Swal.fire("No Changes", "Please update at least one quantity before saving.", "info");
            return;
        }

        Swal.fire({
            title: "Confirm Save",
            text: "Do you want to save all updated quantities?",
            icon: "question",
            showCancelButton: true,
            confirmButtonText: '<i class="bi bi-check-circle me-1"></i>Yes, Save it!',
            cancelButtonText: '<i class="bi bi-x-circle me-1"></i> Cancel',
            customClass: {

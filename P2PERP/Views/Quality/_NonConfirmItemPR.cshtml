<script>
    $(document).ready(function () {

        // Toastr Config
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "timeOut": "3000"
        };

        // ✅ FIXED: Date Range Picker with proper event handling
        $('#Tabledate').daterangepicker({
            autoUpdateInput: false,
            alwaysShowCalendars: false,
            locale: {
                cancelLabel: 'Clear',
                format: 'DD/MM/YYYY',
                applyLabel: 'Apply',
                customRangeLabel: 'Custom Range'
            },
            ranges: {
                'Today': [moment(), moment()],
                'Last 7 Days': [moment().subtract(6, 'days'), moment()],
                'Last 1 Month': [moment().subtract(1, 'months').startOf('day'), moment()],
                'Last 3 Months': [moment().subtract(3, 'months').startOf('day'), moment()],
                'Last 1 Year': [moment().subtract(12, 'months').startOf('day'), moment()]
            }
        }, function (start, end) {
            // Set the date range in the input field
            $('#Tabledate').val(start.format('DD/MM/YYYY') + ' - ' + end.format('DD/MM/YYYY'));

            // Store the dates in data attributes for filtering
            $('#Tabledate').data('start', start);
            $('#Tabledate').data('end', end);

            console.log('Date range selected:', start.format('DD/MM/YYYY'), 'to', end.format('DD/MM/YYYY'));

            // Trigger table redraw
            $('#Non-confirmItemTable').DataTable().draw();
        });

        // Handle cancel event
        $('#Tabledate').on('cancel.daterangepicker', function () {
            $(this).val('Select Date Range');
            $(this).removeData('start').removeData('end');
            console.log('Date filter cleared');
            $('#Non-confirmItemTable').DataTable().draw();
        });

        // Set initial placeholder value
        $('#Tabledate').val('Select Date Range');

        // ✅ FIXED: Simple Date Filter - Only check AddDate column (index 4)
        $.fn.dataTable.ext.search.push(function (settings, data, dataIndex) {
            if (settings.nTable.id !== 'Non-confirmItemTable') return true;

            const start = $('#Tabledate').data('start');
            const end = $('#Tabledate').data('end');

            // If no date range selected, show all rows
            if (!start || !end) {
                return true;
            }

            // Get only AddDate column (index 4)
            const addDateStr = data[4]; // Add Date column

            console.log('Checking date:', addDateStr, 'for range:', start.format('DD/MM/YYYY'), 'to', end.format('DD/MM/YYYY'));

            // Check Add Date - Use strict DD/MM/YYYY format
            if (addDateStr && addDateStr.trim() !== '') {
                const addDate = moment(addDateStr, 'DD/MM/YYYY', true);
                if (addDate.isValid()) {
                    const isInRange = addDate.isSameOrAfter(start) && addDate.isSameOrBefore(end);
                    console.log('Date is valid, in range:', isInRange);
                    return isInRange;
                } else {
                    console.log('Invalid date format:', addDateStr);
                }
            } else {
                console.log('Empty or invalid date string');
            }

            return false;
        });


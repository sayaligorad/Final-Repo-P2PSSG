                                $(this).find('c').attr('s', '2');
                            } else if (rowIndex > 3) {
                                // Data rows: Add serial numbers
                                $(this).find('c:first').before(`<c t="inlineStr"><is><t>${serial}</t></is></c>`);
                                serial++;
                            }
